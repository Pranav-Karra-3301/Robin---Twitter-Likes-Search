{
  "manifest_version": 3,
  "name": "Robin - Twitter Likes Search",
  "version": "2.2.0",
  "description": "Smart indexed Twitter likes search - builds local index of all liked tweets for instant search with query parser",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "content_scripts": [
    {
      "matches": ["*://twitter.com/*", "*://x.com/*"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Robin - Twitter Likes Search",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "web_accessible_resources": [{
    "resources": ["icon.png"],
    "matches": ["*://twitter.com/*", "*://x.com/*"]
  }]
}